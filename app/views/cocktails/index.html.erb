<div class="navbar-wagon"> </div>
  <div class="jumbotron jumbotron-fluid">
      <div class= "banner">
        <h1 class="display-4">Cocktails & the city</h1>
          <p class="lead">'Why did we ever stop drinking these?
              Cause everyone else started'</p>
      </div>
    </div>
<div><%= link_to "Add a cocktail", new_cocktail_path %></div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <img class="card-img-top" src="<%=cocktail.photo%>" alt="Card image cap">
          <div class="card-body">
            <div class="card-title">
              <% link_to cocktail_path(cocktail) do %>
              <%= cocktail.name %>
              <% end %>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>


<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://unsplash.com/photos/MxfcoxycH_Y);">
  <div class="banner-content">
    <h1>Cocktails & the city</h1>
  </div>
</div>

